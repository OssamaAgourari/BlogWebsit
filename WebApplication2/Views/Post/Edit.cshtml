@using Microsoft.AspNetCore.Mvc.Rendering
@model WebApplication2.Models.Post

<h2>Edit Post</h2>

<form method="post" asp-action="Edit" asp-route-id="@Model.Id" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" id="Title" name="Title" class="form-control" value="@Model.Title" required />
    </div>

    <div class="form-group">
        <label for="Content">Content</label>
        <textarea id="Content" name="Content" class="form-control" required>@Model.Content</textarea>
    </div>

    <div class="form-group">
        <label for="CategoryId">Category</label>
        <select id="CategoryId" name="CategoryId" class="form-control" asp-for="CategoryId" asp-items="@(ViewBag.Categories)" required>
            <option value="">Select Category</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<a href="@Url.Action("Details", "Post", new { id = Model.Id })" class="btn btn-secondary">Cancel</a>
