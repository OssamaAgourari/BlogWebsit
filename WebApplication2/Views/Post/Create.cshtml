@model WebApplication2.Models.Post

<h2>Create New Post</h2>

<form asp-controller="Post" asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" class="form-control" required></textarea>
    </div>

    <div class="form-group">
        <label asp-for="CategoryId">Category</label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control" required>
            <option value="">-- Select Category --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Create Post</button>
</form>
